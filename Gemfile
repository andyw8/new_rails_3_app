  gem 'faker'
  gem 'fakeweb'
  gem 'launchy'    # For 'Then show me the page' in Cucumber
  gem 'mocha' # used in specs from nify-generators
  gem 'pickle'
  gem 'rspec-rails'
  gem 'shoulda'
  gem 'sqlite3-ruby', :require => 'sqlite3'
