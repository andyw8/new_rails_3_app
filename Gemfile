group :development do
  gem 'annotate' # https://github.com/ctran/annotate_models
  gem 'autotest'
  gem 'autotest-rails-pure'
  gem 'cucumber_scaffold'
  gem 'git-up'
  gem 'heroku'
  gem 'hpricot' # required by Devise views to Haml
  gem 'nifty-generators' # https://github.com/ryanb/nifty-generators
  gem 'ruby_parser' # needed when generating Haml views for inherited_resources_views
  gem 'ruby-prof'
end

group :development_mac do
  gem 'autotest-fsevent' # https://github.com/svoop/autotest-fsevent
  gem 'autotest-growl'
end

group :development, :test do
  gem 'flay' # http://ruby.sadi.st/Flay.html
  gem 'flog' # http://ruby.sadi.st/Flog.html
  gem 'reek' # https://github.com/kevinrutherford/reek
end

group :test do
  gem 'capybara' # used by Cucumber
  gem 'chronic' # https://github.com/mojombo/chronic
  gem 'cucumber-rails'
  gem 'database_cleaner' # used by Cucumber
